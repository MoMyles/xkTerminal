<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical">

    <com.cetcme.xkterminal.ActionBar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="250dp"
                    android:layout_marginStart="250dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="用户地址："/>

                <TextView
                    android:id="@+id/address_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginRight="250dp"
                    android:layout_marginEnd="250dp"
                    android:textSize="18sp"
                    android:text="---"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="250dp"
                    android:layout_marginStart="250dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="信号强度："/>

                <TextView
                    android:id="@+id/signal_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="250dp"
                    android:layout_marginEnd="250dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="---"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="250dp"
                    android:layout_marginStart="250dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="位置报告频度："/>

                <TextView
                    android:id="@+id/location_freq_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="250dp"
                    android:layout_marginEnd="250dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="---"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="250dp"
                    android:layout_marginStart="250dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="GPS定位频度："/>

                <TextView
                    android:id="@+id/gps_freq_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="250dp"
                    android:layout_marginEnd="250dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="---"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="250dp"
                    android:layout_marginStart="250dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="中心用户机号："/>

                <TextView
                    android:id="@+id/central_number_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="250dp"
                    android:layout_marginEnd="250dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="---"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

        </LinearLayout>


    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#fd9f3b"
        android:text="setting" />



</LinearLayout>