<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="#000000" />

    <Button
        android:id="@+id/button_receive"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="发件箱"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="120sp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/button_receive"
        android:layout_toRightOf="@+id/button_receive"
        android:gravity="center"
        android:text="收件箱"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_sign"
        android:layout_width="120sp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/button_send"
        android:layout_toRightOf="@+id/button_send"
        android:gravity="center"
        android:text="打卡记录"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_alert"
        android:layout_width="120sp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/button_sign"
        android:layout_toRightOf="@+id/button_sign"
        android:gravity="center"
        android:text="报警记录"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_setting"
        android:layout_width="120sp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/button_alert"
        android:layout_toRightOf="@+id/button_alert"
        android:gravity="center"
        android:text="系统参数"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_navigate"
        android:layout_width="120sp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/button_setting"
        android:layout_toRightOf="@+id/button_setting"
        android:gravity="center"
        android:text="导航管理"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_about"
        android:layout_width="120sp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="关于"
        android:textSize="16sp" />

</RelativeLayout>