<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/psw_dialog_bg"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="请输入管理密码(1644)"
        android:textSize="26sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="174635"
        android:background="#FFFFFF"
        android:enabled="false"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/check_success"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@mipmap/icon_check_wait"
                android:gravity="center"
                android:text="1"
                android:textSize="34sp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@mipmap/icon_check_wait"
                android:gravity="center"
                android:text="2"
                android:textSize="34sp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@mipmap/icon_check_wait"
                android:gravity="center"
                android:text="3"
                android:textSize="34sp"
                />

        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:background="@mipmap/icon_check_wait"
            android:gravity="center"
            android:text="4"
            android:textSize="34sp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:background="@mipmap/icon_check_wait"
            android:gravity="center"
            android:text="5"
            android:textSize="34sp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:background="@mipmap/icon_check_wait"
            android:gravity="center"
            android:text="6"
            android:textSize="34sp"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@mipmap/icon_check_wait"
                android:gravity="center"
                android:text="7"
                android:textSize="34sp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@mipmap/icon_check_wait"
                android:gravity="center"
                android:text="8"
                android:textSize="34sp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@mipmap/icon_check_wait"
                android:gravity="center"
                android:text="9"
                android:textSize="34sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:gravity="center"
                android:text="返回"
                android:textSize="23sp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@mipmap/icon_check_wait"
                android:gravity="center"
                android:text="0"
                android:textSize="34sp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />

            <TextView
                android:id="@+id/tv_del"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:gravity="center"
                android:text="删除"
                android:textSize="23sp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>