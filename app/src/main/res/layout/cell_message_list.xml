<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="32dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/selected_in_message_cell"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="●"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/time_in_message_cell"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="2018/01/10 09:58:31"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/sender_in_message_cell"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="123456"
            android:gravity="center"/>

        <TextView
            android:id="@+id/content_in_message_cell"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="你好，再见"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/read_in_message_cell"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#ff0000"
            android:text="未读"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>