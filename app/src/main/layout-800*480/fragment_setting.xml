<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#dddddd"
              android:orientation="vertical">

    <com.cetcme.xkterminal.ActionBar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="用户地址："
                    android:textColor="#000000"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/address_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="---"/>

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="定位来源："/>

                <TextView
                    android:id="@+id/location_from_textView"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="---"
                    android:textColor="#000000"
                    android:textSize="11sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="信号强度："
                    android:textColor="#000000"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/signal_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="---"/>

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="通讯来源："/>

                <TextView
                    android:id="@+id/communication_from_textView"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="---"
                    android:textColor="#000000"
                    android:textSize="11sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="位置报告频度："/>

                <TextView
                    android:id="@+id/location_freq_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="---"/>

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="信号强度："/>

                <TextView
                    android:id="@+id/signal_power_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginRight="80dp"
                    android:layout_marginEnd="80dp"
                    android:textSize="11sp"
                    android:text="---"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="GPS定位频度："/>

                <TextView
                    android:id="@+id/gps_freq_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="---"/>

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="卫星数量："/>

                <TextView
                    android:id="@+id/satellite_count_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginRight="80dp"
                    android:layout_marginEnd="80dp"
                    android:textSize="11sp"
                    android:text="---"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="中心用户机号："/>

                <TextView
                    android:id="@+id/central_number_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="---"/>

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="主板温度："/>

                <TextView
                    android:id="@+id/broad_temp_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginRight="80dp"
                    android:layout_marginEnd="80dp"
                    android:textSize="11sp"
                    android:text="---"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="锂电池电压："/>

                <TextView
                    android:id="@+id/li_voltage_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="---"/>

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:text="光伏电压："/>

                <TextView
                    android:id="@+id/sun_voltage_textView"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginRight="80dp"
                    android:layout_marginEnd="80dp"
                    android:textSize="11sp"
                    android:text="---"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>



</LinearLayout>