<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.setting.SystemSettingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="WIFI SSID："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/wifi_ssid_textView"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="---"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="RDSS定位："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_rdss"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="150dp"
                    android:layout_marginRight="150dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="开启"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="用户分组："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/group_add_textView"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="增加"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/group_delete_textView"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="时区："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="150dp"
                    android:layout_marginRight="150dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/time_zone_minus_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/time_zone_textView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="+8"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/time_zone_add_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="+" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="短消息模版："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/temp_add_textView"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="增加"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/temp_delete_textView"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="通讯录："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/friend_add_textView"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="增加"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/friend_delete_textView"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="150dp"
                    android:layout_marginRight="150dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="本船信息："
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/own_ship_textView"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="通讯录："
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="增加"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="150dp"
                    android:layout_marginRight="150dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>