<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/barColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="#000000" />

    <Button
        android:id="@+id/btn_relay"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="转发"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_reply_resend"
        android:layout_width="120sp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/btn_relay"
        android:layout_toRightOf="@+id/btn_relay"
        android:gravity="center"
        android:text="回复"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="120sp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/btn_reply_resend"
        android:layout_toRightOf="@+id/btn_reply_resend"
        android:gravity="center"
        android:text="删除"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="120sp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="返回"
        android:textSize="16sp" />

</RelativeLayout>